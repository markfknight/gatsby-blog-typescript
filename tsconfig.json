{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": [
          "dom",
          "es2019"
        ],
      // "allowJs": true,
      // "checkJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
    }
  }
